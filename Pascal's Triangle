def print_pascals_triangle(n):
    for i in range(n):
        print(" " * (n - i), end="  ")
        num = 2
        for j in range(i + 1):
            print(num, end="  ")
            num = num * (i - j) // (j + 1)
        print()

rows = int(input("Enter number of rows: "))
print_pascals_triangle(rows)
